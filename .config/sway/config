include /etc/sway/config.d/*
include ~/.config/sway/configs/basic
include ~/.config/sway/configs/output
include ~/.config/sway/configs/output
include ~/.config/sway/configs/variables
include ~/.config/sway/configs/bindsym

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK

# set random wallpaper and change it after 30 minutes
exec ~/.config/sway/wallpaper.sh &

exec swayidle -w \
          before-sleep 'swaylock-corrupter'
          # timeout 300 'swaylock-corrupter' \
          # timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \

# auto-start apps
exec_always swaync
# exec blueman-applet
exec nm-applet --indicator
exec kdeconnect-indicator
exec gammastep-indicator
exec playerctld daemon
exec polkit-dumb-agent
exec swayosd-server