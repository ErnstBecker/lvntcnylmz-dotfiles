include /etc/sway/config.d/*
include ~/.config/sway/configs/basic
include ~/.config/sway/configs/output
include ~/.config/sway/configs/output
include ~/.config/sway/configs/variables
include ~/.config/sway/configs/bindsym

# swayidle / lockscreen
exec swayidle -w \
         timeout 300 'swaylock' \
         timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
         before-sleep 'swaylock'

# Set Wob overlay
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
exec_always rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob -a bottom --margin 50 --bar-color '#00A878FF' --border-color '#00A878FF'
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK

# sway notification center
exec swaync

# start kanshi 
exec_always pkill kanshi; exec kanshi