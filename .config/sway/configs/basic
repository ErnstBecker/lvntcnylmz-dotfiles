# Assign windows to workspaces
assign [app_id="kitty"] workspace number 1
assign [app_id="firefox"] workspace number 2
assign [title=".*VSCodium"] workspace number 3
assign [instance="spotify"] workspace number 4
assign [instance="discord"] workspace number 5
assign [instance="teams-for-linux"] workspace number 5
assign [app_id="telegram"] workspace number 5
assign [app_id="thunar"] workspace number 6
assign [app_id="thunderbird"] workspace number 7
assign [class="steam"] workspace number 8

# Border config
smart_borders on
default_border pixel 3
default_floating_border pixel 3
default_orientation auto

# Gaps config
gaps inner 10

# SwayFX configs
blur enable
corner_radius 7
shadows enable
layer_effects "waybar" blur enable; shadows enable 

# Exec waybar
bar {
    swaybar_command waybar
}

# Enable thinkPad touchpad
input "1739:0:Synaptics_TM3276-022" {
    dwt enabled
    tap enabled
    middle_emulation enabled
}

# Enable multiple keyboard layouts
input * xkb_layout "us, tr"

seat * xcursor_theme Simp1e-Tokyo-Night 30

# Property Name         Border      BG          Text        Indicator    Child Border
client.focused          $fg-color   $blue       $bg-color   $yellow      $blue
client.focused_inactive $bg-color   $bg-color   $fg-color   $bg-color    $bg-color
client.unfocused        $bg-color   $bg-color   $fg-color   $bg-color    $bg-color
client.urgent           $red        $red        $bg-color   $red         $red
client.placeholder      $bg-color   $bg-color   $fg-color   $bg-color    $bg-color
client.background       $fg-color

# Titlebar sytles
# title_align center                                                  

# Font
font pango:JetBrainsMono Nerd Font Propo Bold 9

# Idle configuration
exec swayidle -w \
         timeout 300 'swaylock-corrupter' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock-corrupter'